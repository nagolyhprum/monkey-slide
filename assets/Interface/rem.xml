<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="rem.gui.StartScreen">
        <layer childLayout="center">
            <panel height="30%" align="center" valign="center" childLayout="vertical">
                <text font="Fonts/Arial-32.fnt" color="#ffffff" text="rem" align="center" valign="center" />
                <control align="center" name="button" label="Play">
                    <interact onClick="play()"/>
                </control>
                <panel height="5%" width="100%" />
                <control align="center" name="button" label="Settings">
                    <interact onClick="settings()"/>
                </control>
            </panel>
        </layer>
    </screen>
    <screen id="game" controller="rem.gui.GameScreen">
        <layer id="background" childLayout="vertical">
            <panel childLayout="horizontal">
                <image width="32" height="32" filename="Interface/coin.png"></image>
                <text id="score" font="Fonts/Arial-32.fnt" color="#ffffff" text="0" />
            </panel>
        </layer>
    </screen>
    <screen id="settings" controller="rem.gui.SettingsScreen">
        <layer childLayout="vertical">
            <panel height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <text font="Fonts/Arial-32.fnt" color="#000f" text="Settings" align="center" valign="center" />
            </panel>
            <panel height="50%" width="75%" align="center" childLayout="vertical" backgroundColor="#0f08">
                <text font="aurulent-sans-16.fnt" color="#000f" text="Graphics" />
                <control id="graphics" name="horizontalScrollbar" worldMax="100.0" worldPageSize="10.0" initial="${CALL.getGraphics()}" buttonStepSize="1.0" pageStepSize="10.0" />
                <text font="aurulent-sans-16.fnt" color="#000f" text="Volume" />
                <control id="volume" name="horizontalScrollbar" worldMax="100.0" worldPageSize="10.0" initial="${CALL.getVolume()}" buttonStepSize="1.0" pageStepSize="10.0" />
            </panel>
            <panel height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
                <panel height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control align="center" name="button" label="Confirm">
                        <interact onClick="confirm()"/>
                    </control>
                </panel>
                <panel height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control align="center" name="button" label="Cancel">
                        <interact onClick="cancel()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
